    "@types/lodash": "4.14.182",
    "@types/node": "18.0.3",
    "@types/react": "18.0.15",
    "@types/react-dom": "18.0.6",
    "@types/uniqid": "5.3.2",
    "clone-deep": "4.0.1",
    "config": "workspace:*",
    "uniqid": "5.4.0",
    "fast-equals": "4.0.1",
    "jest": "27.5.1",
    "jest-in-case": "1.0.2",
    "lodash": "4.17.21",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "ts-jest": "27.1.5",
    "tsconfig": "workspace:*",
    "tsup": "6.1.3",
    "typescript": "4.7.4",
    "zustand": "4.3.2"
