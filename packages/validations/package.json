{
  "name": "@formiz/validations",
  "version": "1.0.0-rc.1",
  "repository": "https://github.com/ivan-dalmet/formiz/tree/master/packages/validations",
  "homepage": "https://formiz-react.com/",
  "author": "Ivan Dalmet <ivan@dalmet.fr> (https://ivan.dalmet.fr/)",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "react",
    "forms",
    "wizard",
    "multi-step-form",
    "form-validation",
    "form-validation-react",
    "form-fields"
  ],
  "scripts": {
    "prepare": "yarn build",
    "start": "rollup -c -w",
    "build": "rollup -c && yarn types",
    "test": "jest",
    "test:dev": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint ./src",
    "types": "tsc --declaration --emitDeclarationOnly --allowJs --outDir dist src/index.js"
  },
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "files": [
    "dist"
  ],
  "jest": {
    "collectCoverageFrom": [
      "./src/**/*.js"
    ]
  },
  "devDependencies": {
    "@babel/core": "7.7.0",
    "@babel/plugin-proposal-class-properties": "7.7.0",
    "@babel/preset-env": "7.7.1",
    "jest": "24.9.0",
    "rollup": "1.26.3",
    "rollup-plugin-babel": "4.3.3",
    "rollup-plugin-commonjs": "10.1.0",
    "rollup-plugin-node-resolve": "5.2.0",
    "rollup-plugin-terser": "5.1.2",
    "rollup-plugin-visualizer": "2.7.2",
    "typescript": "3.7.2"
  }
}
